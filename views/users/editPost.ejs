<div class = "admin-title">
    <h2>
        <%= locals.title %>
    </h2>
    <form action = "/delete/<%= data._id %>?_method=DELETE" method="POST">
        <input type = "submit" value="Delete" class = "btn-delete btn">
    </form>
</div>
<form action="/edit/<%= data.id %>?_method=PUT" method="POST">
    <label for = "title"><b>Post title</b></label>
    <input type = "text" name = title id = "title" value = "<%= data.title %>">

    <label for = "body"><b>Post content</b></label>
    <textarea name = "body" cols="50" rows="10"><%= data.body %></textarea>

    <input type = "submit" value="Edit" class = "btn">
</form>